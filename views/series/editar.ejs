<%- include("../partials/header") %>
  <section id="about">
    <div class="container" style="height: 381px;">
      <div class="row">
        <div class="col-lg-8 mx-auto">
          <form method="post">
            <h2>Editar Séries</h2>
            <div class="form-group">
              <label for="name">Nome da série</label>
              <input 
              value="<%= serie.name %>"
              id="name" name="name" type="text" class="form-control" placeholder="Escreva nome da serie">
              <small class="form-text text-muted">Nome da serie a ser salva</small>
              <% if(errors && errors.indexOf('name')>=0){ %>
                <small class="form-text text-muted">Por favor, informe o nome da série.</small>
              <% } %>
            </div>
            <div class="form-group">
              <label for="status">Situação</label>
              <select class="form-control" id="status" name=status>
                <% labels.forEach(label => { %>
                  <option value="<%= label.id %>" <% if(label.id === serie.status) { %> selected="selected" <% } %>><%= label.name %></option>
                <%})%>
              </select>
            </div>
            <button class="btn btn-primary">Salvar</button>
          </form>
        </div>
      </div>
    </div>
  </section>
<%- include("../partials/footer") %>